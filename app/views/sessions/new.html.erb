<section class="header-11-sub">
    <div class="background">&nbsp;</div>
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
              <div class="signup-form">
                <%= form_tag(sessions_path, method: :post) do %>
                  <div class="form-group">
                    <%= text_field_tag 'email', params[:email], class: 'form-control', placeholder: 'Your E-mail' %>
                  </div>
                  <div class="form-group">
                   <%= password_field_tag 'password', nil,  class: 'form-control', placeholder: 'Password' %>
                 </div>
                 <div class="form-group">
                     <%= submit_tag 'Sign In', class: 'btn btn-block btn-info' %>
                 </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
